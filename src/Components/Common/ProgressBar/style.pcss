.Bar {
  width: 100%;

  &__progressWrapper {
    position: relative;
    box-sizing: border-box;
    height: 29px;
    border: 2px solid #979797;
    padding: 3px;
    background-color: #d8d8d8;
  }

  &__progress {
    max-width: 100%;
    height: 100%;
    background-color: #979797;
  }

  &__title {
    position: absolute;
    top: 4px;
  }
}